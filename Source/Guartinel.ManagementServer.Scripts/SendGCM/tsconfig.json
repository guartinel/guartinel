{
    "compilerOptions": {
        "target": "es2017",
        "module": "commonjs",
        "outDir": "dist",
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,        
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop":true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}