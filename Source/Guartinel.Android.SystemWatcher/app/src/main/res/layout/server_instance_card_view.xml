<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serverInstanceCardViewServerNameTextView"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="name"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:textStyle="bold" />



            <android.support.v7.widget.SwitchCompat
                android:id="@+id/serverInstanceCardViewEnabledSwitch"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textColor="@android:color/white"
                android:textOff="Disabled"
                android:theme="@style/CustomSwitch"
                android:textOn="Enabled" />

            <ImageButton
                android:id="@+id/serverInstanceCardViewDeleteButton"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:src="@drawable/delete_icon"
                android:background="@color/colorPrimary"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/descHint"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Description:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverInstanceCardViewServerDescriptionTextView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="description" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressHint"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Address:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverInstanceCardViewServerAddressTextView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="address" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastSeenHint"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Last seen:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverInstanceCardViewServerLastSeenTextView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="lastSeen" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/statusHint"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Server Status:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverInstanceCardViewServerStatusMessageTextView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="Status" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastCheckedHint"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Last checked:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/serverInstanceCardViewLastCheckedTextView"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:text="" />
            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/serverInstanceCardViewStatusImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/alert" />
    </LinearLayout>


</android.support.v7.widget.CardView>
